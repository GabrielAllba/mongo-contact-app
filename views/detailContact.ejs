<%- include('./layouts/header')  %> 
<%- include('./layouts/nav')  %> 
<div class="container mt-3">
    <div class="row">
        <div class="col">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %> </h5>
                  <p class="card-text"><%= contact.nohp %> </p>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/contact/edit/<%= contact.nama %>" class="btn btn-success">edit</a>
                  <!-- <a href="/contact/delete/<%= contact.nama %>" onclick="return confirm('yakin?')" class="btn btn-danger ">hapus</a> -->
                  <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                    <input type="hidden" name="nama" value="<%=contact.nama %>">
                    <button type="submit" class="btn btn-danger badge" onclick="return confirm('yakin?')">delete</button>
                  </form>
                  <br><br><a href="/contact" class="btn btn-primary">back</a>
                </div>
              </div>
        </div>
    </div>
</div>
